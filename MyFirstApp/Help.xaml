<Window x:Class="MyFirstApp.Help"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFirstApp"
        mc:Ignorable="d"
        Title="Help" 
        Height="230" 
        Width="400"
        Background="CornflowerBlue">
    <Grid>
        <StackPanel
            Orientation="Vertical">
        <Label 
            Content="Instructions" 
            FontSize="23"
            HorizontalAlignment="Center"
            FontFamily="Century Gothic"/>
        <TextBlock
            Text="To calculate the area, choose either feet or meters. Enter your length and width in the text boxes and select an operation. Press the 'clear' button to clear your values."
            TextWrapping="Wrap"
            FontSize="16"
            TextAlignment="Center"
            HorizontalAlignment="Center"/>
        <Button 
            Width="60"
            Height="25"
            Content="Close" 
            Margin="20"
            FontSize="15" Click="Button_Click"/>
    </StackPanel>
    </Grid>
</Window>
